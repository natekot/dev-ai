{
  "version": 1,
  "hooks": {
    "preToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/validate-command.sh",
        "timeoutSec": 30,
        "comment": "Validate commands before execution"
      }
    ],
    "postToolUse": [
      {
        "type": "command",
        "bash": ".github/hooks/scripts/audit-log.sh",
        "timeoutSec": 5,
        "comment": "Log tool executions for audit trail"
      }
    ],
    "sessionStart": [
      {
        "type": "command",
        "bash": "echo \"[$(date -Iseconds)] Session started\" >> .github/hooks/audit.log",
        "timeoutSec": 5,
        "comment": "Log session start"
      }
    ],
    "sessionEnd": [
      {
        "type": "command",
        "bash": "echo \"[$(date -Iseconds)] Session ended\" >> .github/hooks/audit.log",
        "timeoutSec": 5,
        "comment": "Log session end"
      }
    ]
  }
}
